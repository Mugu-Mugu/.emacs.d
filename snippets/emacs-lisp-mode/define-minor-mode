# -*- mode: snippet -*-
# name: my minor mode
# key: dfm
# --

(defun mugu-$1--activate ()
  "Setup for mugu-$1-mode."

  )

(defun mugu-$1--deactivate ()
  "Tear down for mugu-$1-mode."

  )

(define-minor-mode mugu-${1:package}-mode
  "Define mugu-$1-mode${2:.}"
  :global t
  :group 'mugu
  :keymap (make-sparse-keymap)
  (if mugu-$1-mode
      (mugu-$1--activate)
    (mugu-$1--deactivate)))